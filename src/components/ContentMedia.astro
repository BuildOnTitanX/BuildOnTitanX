---
import { Media } from 'accessible-astro-components'

/**
 * ContentMedia Component
 *
 * @description A component that displays content alongside media, with the option to reverse the image position
 */
interface Props {
  /**
   * The source URL for the image
   */
  imgSrc: string
  /**
   * Whether to display the image on the right side instead of the left
   * @default false
   */
  reverseImg?: boolean
}

const { imgSrc, reverseImg = false }: Props = Astro.props
---

<section class="my-32 md:my-64">
  <div class="container">
    <div class="grid grid-cols-1 gap-24 md:grid-cols-2 items-center">
      <div
        class={`mediaBox rounded-lg ${
          reverseImg ? 'order-1 md:order-2' : 'order-1 md:order-1'
        }`}
      >
        <Media class="mediaBoxImg rounded-lg" src={imgSrc} />
        <div class="mediaBoxBackdrop" />
      </div>

      <div
        class={`space-content flex flex-col justify-center ${
          reverseImg ? 'order-2 md:order-1' : 'order-2 md:order-2'
        }`}
      >
        <slot />
      </div>
    </div>
  </div>
</section>
