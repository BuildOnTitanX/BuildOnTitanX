        <Avatar initials="DM" title="David Martinez" subtitle="UX Researcher" />
        <Avatar initials="EB" title="Emma Brown" subtitle="Accessibility Specialist" />
        <Avatar initials="TC" title="Thomas Chen" subtitle="Frontend Developer" />
      </AvatarGroup>
    </div>
  </section>
   -->

  <section class="mt-64 mb-32">
    <div class="container">
      <h2 class="mb-16 text-6xl">Impact in numbers</h2>
      <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-4">
        <Counter count="~$55M" title="ECO" title2="SYSTEM" sub="MCAP" />
        <Counter count="~$252K" title="ECO" title2="SYSTEM" sub="VOLUME" />
        <Counter count="~126T" title="ALL" title2="TITANX" sub="BURNED" />
        <Counter count="~20K" title="ALL" title2="TITANX" sub="USERS" />
      </div>
    </div>
    <div class="container mt-16">
      <h3 class="mb-8 text-3xl">Get precise data here:</h3>
      <LinkComponent class="button" href="https://www.titanxhub.com/">TitanXHub</LinkComponent>
    </div>
  </section>
</DefaultLayout>

<style lang="scss" is:global>
  .avatar {
    border: 1px solid var(--border-color-subtle);
    border-radius: var(--radius-md);
    padding: var(--space-s);
  }

  .accordionReset h3 {
    margin-top: 0 !important;
  }
</style>
