// 1. Static paths
export async function getStaticPaths() {
  const pages = await getCollection('pages', ({ data }) => data.published)

  return pages.map((page) => ({
    // params: { slug: page.slug.split('/') }, // array for catch-all
    params: { slug: page.slug },
    props: { page }, // pass entry directly
  }))
}

// 2. Access the page prop from getStaticPaths
const { page } = Astro.props
const fullSlug = page.slug // already a string like 'test' or 'about/team'
const frontmatter = page.data
const blocks = frontmatter.blocks ?? []

