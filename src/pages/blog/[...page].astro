---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
// import { Card, Pagination } from 'accessible-astro-components'
import Card from '../../components/Card.astro'
import { Pagination } from 'accessible-astro-components'
import { getCollection } from 'astro:content'
import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'

export const getStaticPaths = (async ({ paginate }) => {
  const entries = await getCollection(
    'entries',
    ({ data }) => data.published === true,
  )
  return paginate(entries, { pageSize: 6 })
}) satisfies GetStaticPaths

interface Props {
  page: Page<CollectionEntry<'entries'> & { featuredImage: any }>
}

const { page } = Astro.props

// Prepare pagination props
const currentPage = page.currentPage
const totalPages = Math.ceil(page.total / page.size)
---

<DefaultLayout
  title="Tutorials"
  description="A collection of tutorials showcasing various topics and content."
>
  <PageHeader
    title="Articles"
    subtitle="Here you can find a list of different Blog Articles about the TitanX Ecosystem. You should find Articles about Projects and Crypto-Topics in general. Please get in contact, if you got an idea for an Article."
    bgType="bordered"
  />
  <section class="my-12">
    <div class="container">
      <p class="text-sm">
        <em
          >Tutorial {page.start + 1} through {page.end + 1} of {page.total} total
          tutorials</em
        >
      </p>
      <ul class="my-3 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {
          page.data.map((entry) => (
            <li>
              <Card
                img={entry.data.image}
                url={'/tutorials/' + entry.id}
                title={entry.data.title}
                footer={'Author: ' + entry.data.author}
              >
                {entry.data.description}
              </Card>
            </li>
          ))
        }
      </ul>
      <div class="mt-12 grid place-content-center">
        <Pagination
          firstPage={page.url.prev ? '/entries' : null}
          previousPage={page.url.prev ? page.url.prev : null}
          nextPage={page.url.next ? page.url.next : null}
          lastPage={page.url.next
            ? `/entries/${Math.ceil(page.total / page.size)}`
            : null}
          currentPage={`${page.currentPage}`}
          totalPages={`${Math.ceil(page.total / page.size)}`}
          ariaLabel="Entries pagination"
        />
      </div>
    </div>
  </section>
</DefaultLayout>
